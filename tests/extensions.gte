@merge($, $.common)

@template("draw_fir")
  @$colors := printf("Fg%s,Bg%s", .fg, .bg)
  @$len := .size * 2 * lenc(.char) + len(color($colors))
  @range($n := to(1, .size*2, 2))
    -@center(color($colors, $.char * $n), $len)@CR
  @end range
@end template

